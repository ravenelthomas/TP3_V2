{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>


	<h2>Sessions à venir</h2>

	<table>
		<tr>
			<th>Id de la session</th>
			<th>Début de la session</th>
			<th>Fin de la session</th>
			<th>User</th>
		</tr>

		{% for session in sessions %}

			<tr>
				<td>{{ session.id }}</td>
				<td>{{ session.startSession.format('d/m/Y H:i') }}</td>
				<td>{{ session.endSession.format('d/m/Y H:i') }}</td>
				<td>{{ session.idUser.id }}</td>

			</tr>

		{% endfor %}
	</table>
	<h2>Tâche par sessions</h2>
	<table>
		<tr>
			<th>Id de la session</th>
			<th>Id de la tâche</th>
			<th>Titre de la tâche</th>
			<th>Contenu de la tâche</th>
			{# <th>Statut de la tâche</th> #}
		</tr>

		{% for task in tasks %}
			<tr>
				<td>{{ task.idSession }}</td>
				<td>{{ task.id }}</td>
				<td>{{ task.name }}</td>
				<td>{{ task.description }}</td>
				{#<td>{{ task.status }}</td> #}
			</tr>

		{% endfor %}
	</table>


{% endblock %}

