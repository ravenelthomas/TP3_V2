{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="max-w-md mx-auto mt-8 p-8 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-semibold mb-4">Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <div class="mb-4">
        {{ form_row(registrationForm.name, { 'attr': {'class': 'form-input w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-500', 'placeholder': 'Name'} }) }}
    </div>
    <div class="mb-4">
        {{ form_row(registrationForm.surname, { 'attr': {'class': 'form-input w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-500', 'placeholder': 'Surname'} }) }}
    </div>
    <div class="mb-4">
        {{ form_row(registrationForm.email, { 'attr': {'class': 'form-input w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-500', 'placeholder': 'Email'} }) }}
    </div>
    <div class="mb-4">
        {{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'form-input w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-500', 'placeholder': 'Password'} }) }}
    </div>
    <button type="submit" class="w-full py-2 text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring focus:bg-blue-600">Register</button>
    {{ form_end(registrationForm) }}
    <a href="{{ path('app_login') }}" class="block text-center mt-4 text-sm text-blue-500 hover:text-blue-600">Already have an account?</a>
</div>
{% endblock %}
