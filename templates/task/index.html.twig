{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto mt-8 p-8 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-semibold mb-4">Task index</h1>

    <table class="w-full border-collapse border border-gray-300">
        <thead>
            <tr class="bg-gray-200">
                <th class="py-2 px-4">Id</th>
                <th class="py-2 px-4">Name</th>
                <th class="py-2 px-4">Description</th>
                <th class="py-2 px-4">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
            <tr class="{{ loop.index is odd ? 'bg-gray-100' : '' }}">
                <td class="py-2 px-4">{{ task.id }}</td>
                <td class="py-2 px-4">{{ task.name }}</td>
                <td class="py-2 px-4">{{ task.description }}</td>
                <td class="py-2 px-4">
                    <a href="{{ path('app_task_show', {'id': task.id}) }}" class="text-blue-500 hover:underline">show</a>
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="text-blue-500 hover:underline ml-2">edit</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4" class="text-gray-700 py-2 px-4">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_task_new') }}" class="text-blue-500 hover:underline mt-4">Create new</a>
</div>
{% endblock %}
